{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@effect-deck/core": ["packages/core/src/index.ts"],
      "@effect-deck/core/*": ["packages/core/src/*"],
      "@effect-deck/web": ["packages/web/src/index.ts"],
      "@effect-deck/web/*": ["packages/web/src/*"],
      "@effect-deck/cli": ["packages/cli/src/index.ts"],
      "@effect-deck/cli/*": ["packages/cli/src/*"]
    }
  }
}
